{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@typings/*": ["types/*"],
      "@renderer/*": ["renderer/*"],
      "@parser/*": ["parser/*"],
      "@lexer/*": ["lexer/*"],
      "@main/*": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
