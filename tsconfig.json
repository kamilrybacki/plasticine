{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": "./src",
    "paths": {
      "@renderer/*": ["renderer/*"],
      "@markup/*": ["markup/*"],
      "@parser/*": ["parser/*"],
      "@lexer/*": ["lexer/*"],
      "@main/*": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
